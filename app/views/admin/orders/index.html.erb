<div class="container">
　<div class="row" style="margin:30px 50px 40px 0px">
    <div class="col-lg-3">
      <h3 style="background-color: #DCDCDC;vertical-align: middle;text-align: center;">注文履歴一覧</h>
    </div>
  </div>
  <div class="row" style="margin:30px 50px 40px 0px">
    <div class="col-lg-11">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th class="col-lg-3">購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to "#{order.created_at.strftime("%Y/%m/%d %H:%M:%S")}", admin_order_path(order.id) %></td>
              <td><%= "#{order.user.family_name} #{order.user.first_name}"  %></td>
                <td>
                  <% @sum = 0%>
                  <% order.order_items.each do |order_item| %>
                  <% @sum += order_item.piece%>
                  <% end %>
                  <%= "#{@sum}個" %>
                </td>
              <td><%= order.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto" style="width: 70%;">
      <div class="col-lg-12 d-flex justify-content-center align-items-center">
        <div><%= paginate @orders %></div>
      </div>
    </div>
  </div>
</div>