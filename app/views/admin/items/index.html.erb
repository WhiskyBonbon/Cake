<h2>商品一覧</h2>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
        <% if item.is_active == true %>
          <% sale_status = "販売中" %>
        <% else %>
          <% sale_status = "販売停止中" %>
        <% end %>
      <td><%= sale_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>