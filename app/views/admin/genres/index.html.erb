<%= form_with model:[:admin, @genre],local: true do |f| %>
  <p class="form-group">
    <label for="genre_name">ジャンル名</label>
    <%= f.text_field :name %>
  </p>
      
  <p class="action">
    <%= f.submit '新規登録',class:"btn btn-success"%>
  </p>
<% end %>

<table class='table'>
  <thead>
    <tr>
      <td>ジャンル</td>
    </tr>
  </thead>
  <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class:"btn btn-success" %></td>
      </tr>
      <% end %>
  </tbody>
</table>
