<div class="container">
  <div class="row" style="margin:30px 50px 40px 20px">
    <div class="col-lg-4 offset-lg-1">
      <h3 style="background-color: #FFE28C;;vertical-align: middle;text-align: center;">ジャンル一覧・追加</h>
    </div>
  </div>
  
  <%= form_with model:[:admin, @genre],local: true do |f| %>
    <div class="row" style="margin:30px 0px 40px 0px">
      <div class="col-lg-2 d-flex align-items-center">ジャンル名</div>
      <div class="col-lg-3"><%= f.text_field :name,class:"form-control", placeholder:"ジャンル名" %></div>
      <div class="col-lg-2 d-flex justify-content-center align-items-right">
        <%= f.submit '新規登録',class:"btn btn-warning"%>
      </div>
    </div>
  <% end %>
    
<div class="row">
  <table class="table col-lg-5">
    <thead style="background-color: #FFE28C;">
      <tr>
        <th>
          <div class="text-center">ジャンル</div>
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td class="align-middle"><%= genre.name %></td>
        <td >
          <div class="text-center"><%= link_to "編集する",edit_admin_genre_path(genre.id),class:"btn btn-outline-warning" %></div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
