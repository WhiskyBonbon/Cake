<%= form_with model:[:admin, @genre],local: true do |f| %>
  <div class="form-group">
    <label for="genre_name">ジャンル名</label>
    <%= f.text_field :name %>
  </div>
      
  <div class="action">
    <%= f.submit '新規登録',class:"btn btn-success"%>
  </div>
<% end %>


  <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する",edit_admin_genre_path(genre.id) %></td>
      </tr>
      <% end %>
  </tbody>