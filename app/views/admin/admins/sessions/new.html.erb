<div class="container">

  <div class="row">
    <h4 class="login_title">管理者ログイン</h4>
  </div>

  <div class="row">
    <div class="form-group">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control, col-lg-12", placeholder:"sample@example.com" %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control, col-lg-12" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary btn-sm col-lg-6" %>
          <%= link_to "", new_admin_manager_registration_path, class:"fas fa-child" %>
         </div>
      <% end %>
    </div>
  </div>

</div>

