<h2>配送先編集</h2>
<%= form_with model: @address, local:true do |f| %>
    <p>
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
      <%= f.text_field :postal_code %>
    </p>

    <p>
      <%= f.label :address, "住所" %>
      <%= f.text_field :address %>
    </p>

    <p>
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name %>
    </p>

      <%= f.submit '変更内容を保存', class: "btn btn-sm btn-success" %>
<% end %>