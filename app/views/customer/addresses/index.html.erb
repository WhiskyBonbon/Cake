<h2>配送先登録/一覧</h2>

 <%= form_with model: address, local:true do |f| %>
    <p>
      <%= f.label :郵便番号(ハイフンなし) %>
      <%= f.text_field :postal_code %>
    </p>

    <p>
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </p>

    <p>
      <%= f.label :宛名 %>
      <%= f.text_field :name %>
    </p>

      <%= f.submit '新規登録' %>

  <% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.pstal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>