<div class="container">
  <div class="row" style="margin:30px 50px 40px 20px">
    <div class="col-lg-4 offset-lg-1">
      <h3 style="background-color: #FFE28C;vertical-align: middle;text-align: center;">配送先登録/一覧</h3>
    </div>
  </div>
  <%= render 'form', address: @address %>
  <div class="row" style="padding-top:20px">
    <div class="col-lg-9">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td><%= link_to "編集", edit_address_path(address),class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "削除", address_path(address), method: :delete, data: { confirm: '本当に削除しますか？'}, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

