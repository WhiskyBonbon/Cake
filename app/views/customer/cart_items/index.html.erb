<h2>ショッピングカート</h2>
<%= link_to "カートを空にする", all_destroy_path %>
<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @cart_item.item.each do |item| %>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.price*1.1 %></td>
        <td>
          <%= form_with model:cart_item, url:cart_item_path, method: :patch, local:true do |f| %>
            <%= f.select :piece, @number %>
            <%= link_to "変更", cart_item_path, method: :patch %>
          <% end %>
        </td>
        <td><%= cart_item.item.price*1.1*cart_item.piece %></td>
        <% @sum += (cart_item.item.price*1.1*cart_item.piece) %>
        <td><%= link_to "削除する", cart_item_path, method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<%= link_to "買い物を続ける", root_path %>
<tr>
  <th>合計金額</th>
  <th><%= @sum %></th>
</tr>