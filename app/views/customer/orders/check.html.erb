<%= form_with model:@order, url: orders_path, local:true do |f| %>
 <table class="table table-bordred">
  <thead>
   <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
   </tr>
  </thead>
  <tbody>
   <% sum = 0 %>
   <% @cart_items.each do |cart_item| %>
    <tr>
     <td><%= cart_item.item.name %></td>
     <td><%= (cart_item.item.price*1.1).round.to_s %></td>
     <td><%= cart_item.piece %></td>
     <td><%= cart_item.item.price * cart_item.piece %></td>
     <% cart_item.item.price = (cart_item.item.price*1.1).round.to_s %>
     <% price = cart_item.item.price * cart_item.piece %>
     <% sum += price %>
    </tr>
   <% end %>
  </tbody>
 </table>

 <table class="table table-bordred">
  <thead>
   <tr>
    <th>送料</th>
    <th>商品合計</th>
    <th>請求額</th>
   </tr>
  </thead>
  <tbody>
   <tr>
    <td><%= @order.postage %></td>
    <td><%= sum %>円</td>
        <% @order.order_amount = sum + @order.postage %>
    <td><%= @order.order_amount %></td>
   </tr>
  </tbody>
 </table>

 <h2>お支払い方法</h2>
  <% if @order.payment_method == 0 %>
   クレジットカード
  <% else %>
   銀行振込
  <% end %>

 <h2>お届け先</h2>
 <%= @order.postal_code %>
 <%= @order.address %>
 <%= @order.name %>

 <%= f.hidden_field :payment_method, :value => @order.payment_method %>
 <%= f.hidden_field :postal_code, :value => @order.postal_code %>
 <%= f.hidden_field :address, :value => @order.address %>
 <%= f.hidden_field :name, :value => @order.name %>
 <%= f.hidden_field :user_id, :value => @order.user_id %>
 <%= f.hidden_field :postage, :value => @order.postage %>
 <%= f.hidden_field :order_amount, :value => @order.order_amount %>

 <%= f.submit '注文を確定する', class: "btn btn-success" %>
 <% end %>