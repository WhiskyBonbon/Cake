<%= form_with model: @order, url: check_path, local: true do |f| %>
<%= f.label :payment, "支払い方法" %>
<br>
<%= f.radio_button :payment_method,:クレジットカード,  checked: "checked" %>
<%= f.label :payment_method, "クレジットカード" %>
<br>
<%= f.radio_button :payment_method, :銀行振込 %>
<%= f.label :payment_method, "銀行振込" %>
<br>

<%= f.label :address, "お届け先" %>
<br>

<%= f.radio_button :address_option, 0, checked: "checked" %>
<%= f.label :curent_user_address, "ご自身の住所" %>
<%= @user.postal_code %>
<%= @user.address %>

<br>
<%= f.radio_button :address_option, 1 %>
<%= f.label :order_address, "登録済住所から選択" %>
<%= f.collection_select :address , @user.addresses, :id, :address , :include_blank => "選択してください" %>


<br>
<%= f.radio_button :address_option, 2 %>
<%= f.label :order_address, "新しいお届け先" %>
<br>

<%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
<%= f.text_field :postal_code %>
<br>

<%= f.label :address, "住所" %>
<%= f.text_field :address %>
<br>

<%= f.label :name, "宛名" %>
<%= f.text_field :name %>
<br>
<%= f.hidden_field :user_id, :value => @user.id %>
<%= f.hidden_field :address_option %>
<%= f.submit "確認画面へ進む" , class:"btn btn-primary" %>

<% end %>
