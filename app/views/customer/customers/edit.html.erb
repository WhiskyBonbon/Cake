<div class='container'>
  
  <div class="row" style="margin:30px 50px 40px 20px">
    <div class="col-lg-3 offset-lg-2">
      <h3 style="background-color: #DCDCDC;vertical-align: middle;text-align: center;">会員情報編集</h3>
    </div>
  </div>
  
  <%= form_with model:@user,url: customers_path,local:true do |f| %>
  <div class='row'>
    <div class="col-lg-2">氏名</div>
    <div class="col-lg-2">
      <div class="form-group">
        <%= f.text_field :family_name, class:"form-control"%>
      </div>
    </div>
    <div class="col-lg-2">
      <div class="form-group">
        <%= f.text_field :first_name, class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2">フリガナ</div>
    <div class="col-lg-2">
      <div class="form-group">
        <%= f.text_field :k_family_name, class:"form-control"%>
      </div>
    </div>
    <div class="col-lg-2">
      <div class="form-group">
        <%= f.text_field :k_first_name, class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2">郵便番号</div>
    <div class="col-lg-2">
      <div class="form-group">
        <%= f.text_field :postal_code, class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2">住所</div>
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.text_field :address, class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2">電話番号</div>
    <div class="col-lg-2">
      <div class="form-group">
        <%= f.text_field :phone_number, class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2">メールアドレス</div>
    <div class="col-lg-2">
      <div class="form-group">
        <%= f.text_field :email, class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row" style="margin:30px 10px 0px 10px">
    <div class="col-lg-2 offset-lg-2">    
      <%= f.submit "編集内容を保存",class:"btn btn-success" %>
      <% end %>
    </div>
    
    <div class="col-lg-2">
      <%= link_to "退会する", delete_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
